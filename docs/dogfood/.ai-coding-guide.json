{
  "domain": "general",
  "domains": {
    "primary": "dev-tools",
    "additional": [
      "cli",
      "linting"
    ]
  },
  "domainPriority": [
    "dev-tools",
    "cli",
    "linting"
  ],
  "constantResolution": {},
  "version": "1.0",
  "constants": {},
  "terms": {
    "entities": [],
    "properties": [],
    "actions": []
  },
  "naming": {
    "style": "camelCase",
    "booleanPrefix": [
      "is",
      "has",
      "should",
      "can"
    ],
    "asyncPrefix": [
      "fetch",
      "load",
      "save"
    ],
    "pluralizeCollections": true
  },
  "antiPatterns": {
    "forbiddenNames": [
      "value",
      "data",
      "result",
      "tmp",
      "arr",
      "obj",
      "bool",
      "item"
    ],
    "forbiddenTerms": []
  },
  "experimentalExternalConstants": true,
  "externalConstantsAllowlist": [],
  "minimumMatch": 0.6,
  "minimumConfidence": 0.7,
  "architecture": {
    "fileStructure": {
      "pattern": "feature-based"
    },
    "maxFileLength": {
      "cli": 100,
      "command": 150,
      "util": 200,
      "generator": 250,
      "component": 300,
      "default": 250
    },
    "organization": {
      "commands": "lib/commands/{command}/",
      "utils": "lib/utils/",
      "generators": "lib/generators/",
      "tests": "tests/"
    },
    "functions": {
      "maxLength": 50,
      "maxComplexity": 10,
      "maxDepth": 4,
      "maxParams": 4,
      "maxStatements": 30,
      "singlePurpose": true,
      "preferPure": true
    },
    "patterns": {
      "cliStyle": "orchestration-shell",
      "errorHandling": "explicit",
      "asyncStyle": "async-await"
    }
  }
}
